# /etc/systemd/system/viud.service

[Unit]
Description=Virtual USB Device Daemon (root)
After=network.target

[Service]
Type=simple
ExecStart=/usr/local/bin/viud
StandardOutput=append:/var/log/viud.log
StandardError=append:/var/log/viud.log
User=root
Group=root
Restart=on-failure

RuntimeDirectory=viud
RuntimeDirectoryMode=0755

NoNewPrivileges=true

[Install]
WantedBy=multi-user.target
